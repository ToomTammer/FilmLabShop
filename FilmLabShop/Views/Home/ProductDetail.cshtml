                                <i class="fa fa-star-half-o fa-2x"></i>
                            </li>
                            <span class="ml-1">259 คะแนน</span>
                            <span class="ml-1">|</span>
                            <span class="ml-1">452 ขายแล้ว</span>
                        </ul>
                        <h2>@String.Format("{0:c}", Model.PdPrice)</h2>
                        <p>@Html.DisplayFor(model => model.PdDetail)</p>

                        <div class="col-lg-12 quantity-set row">
                            <h5>จำนวน</h5>
                            <!--Quantity Button-->
                            <div class="col-lg-5 quantity-group">

                                <div class="input-group-detail">
                                    <span class="input-group-btn">
                                        <button type="button" class="quantity-left-minus btn btn-number" data-type="minus" data-field="">
                                            -
                                        </button>
                                    </span>
                                    <input readonly type="text" id="quantity" name="qty" class="form-control input-number col-lg-7" value="1" min="1" max="100">
                                    <span class="input-group-btn">
                                        <button type="button" class="quantity-right-plus btn btn-number" data-type="plus" data-field="">
                                            +
                                        </button>
                                    </span>
                                </div>
                                <script src="~/js/ProductDetail.js"></script>

                            </div>
                            <h6>มีสินค้า @Html.DisplayFor(model => model.PdStock) ชิ้น</h6>
                        </div>
                        <input id="btnAddCart" class="btn btn-add-cart col-lg-12" type="submit" asp-action="Addtocart" asp-route-id="@Model.PdId" value="เพิ่มไปยังรถเข็น" />
