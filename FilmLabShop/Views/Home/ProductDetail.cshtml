    <!--------------------Product Detail------------------------->
    @using (@Html.BeginForm())
    {
        <section class="container">
            <div class="container row productD-container">
                <div class="col-sm-12 col-md-12 col-lg-6 p-0 img-product-detail img-fluid">

                    @if (Model.PdImg != null)
                    {
                        <img src="data:image/*;base64,@(Convert.ToBase64String(Model.PdImg))">
                    }
                    else
                    {
                        <img src="~/img/empty.jpg" />
                    }

                </div>
                <div class="col-sm-12 col-md-12 col-lg-5 text-product-detail">
                    <form asp-controller="Home">
                        <h1>@Html.DisplayFor(model => model.PdName)</h1>
                        <h5>@Html.DisplayFor(model => model.PdSubHead)</h5>
                        <ul class="rating-fixed">
                            <li>
                                <i class="fa fa-star fa-2x"></i>
                            </li>
                            <li>
                                <i class="fa fa-star fa-2x"></i>
                            </li>
                            <li>
                                <i class="fa fa-star fa-2x"></i>
