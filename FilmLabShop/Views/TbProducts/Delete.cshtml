@model FilmLabShop.Models.db.TbProduct

@{
    ViewData["Title"] = "Delete";
}

<section class="container">
    <div style="height:100px;">
    </div>
    <h1>Detail Product</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PdId)
            </dd>
            <dt class="col-sm-2">
                Image
            </dt>
            <dd class="col-sm-10">
                @if (Model.PdImg != null)
                {
                    <img style="width:80px;" src="data:image/*;base64,@(Convert.ToBase64String(Model.PdImg))">
                }
                else
                {
                    <img style="width:80px;" src="~/img/empty.jpg" />
                }
            </dd>
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PdName)
            </dd>
            <dt class="col-sm-2">
                Price
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PdPrice)
            </dd>
            <dt class="col-sm-2">
                Category
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cate.CateId)
            </dd>
            <dt class="col-sm-2">
                Stock
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PdStock)
            </dd>
            <dt class="col-sm-2">
                Saled
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PdDelete)
            </dd>

            <dt class="col-sm-2">
                Status
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PdStatus)
            </dd>
            <dt class="col-sm-2">
                SubHead
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PdSubHead)
            </dd>
            <dt class="col-sm-2">
                Detail
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PdDetail)
            </dd>



        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="PdId" />
            <input type="submit" value="Delete" class="btn btn-danger mt-3" />
            <a class="btn btn-secondary mt-3" asp-action="Index">Back to List</a>
        </form>
    </div>
    <div style="height:40px;">
    </div>
</section>
