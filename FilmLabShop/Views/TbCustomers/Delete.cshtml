@model FilmLabShop.Models.db.TbCustomer

@{
    ViewData["Title"] = "Delete";
}

<section class="container">
    <div style="height:100px;">
    </div>
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>TbCustomer</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CusId)
            </dd>
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CusName)
            </dd>
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CusEmail)
            </dd>
            <dt class="col-sm-2">
                Phone
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CusPhone)
            </dd>
            <dt class="col-sm-2">
                Address
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CusAddress)
            </dd>
            <dt class="col-sm-2">
                Pay-in Slip
            </dt>
            <dd class="col-sm-10">
                @if (Model.CusReceipt != null)
                {
                    <img style="width:80px;" src="data:image/*;base64,@(Convert.ToBase64String(Model.CusReceipt))">
                }
                else
                {
                    <img style="width:80px;" src="~/img/empty.jpg" />
                }
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="CusId" />
            <input type="submit" value="Delete" class="btn btn-danger mt-3" />
            <div>
                <a class="btn btn-secondary mt-3" style="color:white;" asp-action="Index">Back to List</a>
            </div>
            <div style="height:40px;">
            </div>
        </form>
    </div>
</section>
